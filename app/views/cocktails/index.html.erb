<div class="container text-center add">
  <% @cocktails.each_slice(3) do |cocktails| %>
    <div class="row">
      <% cocktails.each do |cocktail| %>
        <% if cocktail.photo? %>
          <div class="col-xs-4">
            <div class="card">
              <%= cl_image_tag cocktail.photo.path, width: 350, height: 200, crop: :fill %>
              <div class="card-category"> lalalal</div>
              <div class="card-description"><h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2></div>

            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>


